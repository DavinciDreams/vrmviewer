    "eslint-plugin-react-refresh": "^0.4.5",
    "happy-dom": "^20.3.1",
    "jsdom": "^27.4.0",
    "postcss": "^8.4.35",
    "tailwindcss": "^3.4.1",
    "typescript": "^5.2.2",
